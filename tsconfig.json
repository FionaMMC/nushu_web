{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": [
    "src/components",
    "src/hooks", 
    "src/services",
    "src/utils/navigation.ts",
    "src/App.tsx",
    "src/Router.tsx",
    "src/main.tsx",
    "src/index.css"
  ],
  "exclude": [
    "src/api",
    "src/config",
    "src/controllers",
    "src/models",
    "src/utils/auth.ts",
    "src/utils/imageProcessing.ts",
    "src/scripts",
    "src/server.ts"
  ]
}